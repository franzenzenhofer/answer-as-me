{
  "name": "answer-as-me",
  "version": "1.0.0",
  "description": "Gmail Add-on that uses AI to draft personalized email responses as Franz Enzenhofer",
  "main": "dist/Code.gs",
  "scripts": {
    "login": "clasp login",
    "create": "clasp create --title 'Answer As Me' --type addon --rootDir ./dist",
    "watch": "tsc --watch",
    "build": "npm run clean && tsc && npm-run-all --parallel bundle copy-files sync-readme",
    "sync-readme": "node sync-readme.js",
    "bundle": "node bundle.js",
    "copy-files": "cp src/appsscript.json dist/",
    "clean": "rimraf dist",
    "push": "npm run build && clasp push --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "echo 'E2E tests require manual verification in Gmail - see test-integration.gs'",
    "test:integration": "npx ts-node --project tsconfig.integration.json src/integration-test.ts",
    "lint": "tsc --noEmit",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check": "npm-run-all --parallel lint lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "test:postbundle": "node tests/scripts/test-post-bundle.js",
    "test:all": "npm-run-all --parallel test test:postbundle",
    "predeploy": "npm-run-all check build test && echo 'Pre-deploy checks passed'",
    "deploy": "npm run predeploy && git add -A && git diff --staged --quiet || git commit -m 'chore: prepare for deployment' && npm version minor && ./deploy.sh && echo 'Deployment complete'",
    "deploy:major": "npm run predeploy && npm version major && ./deploy.sh && echo 'Major version deployment complete'",
    "open": "clasp open",
    "logs": "clasp logs",
    "setup": "npm install && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "gmail",
    "google-apps-script",
    "gemini",
    "ai",
    "automation",
    "email"
  ],
  "author": "Franz Enzenhofer",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@google/clasp": "^3.0.6-alpha",
    "@types/dotenv": "^6.1.1",
    "@types/google-apps-script": "^1.0.99",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "acorn": "^8.15.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
